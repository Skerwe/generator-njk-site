{
  "name": "generator-njk-site",
  "version": "2.0.0",
  "description": "A nunjucks and gulp static site generator",
  "homepage": "https://github.com/Skerwe/generator-njk-site#readme",
  "author": {
    "name": "Quintin Henn",
    "email": "quintin.henn@gmail.com",
    "url": "http://skerwe.web.za"
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skerwe/generator-njk-site.git"
  },
  "keywords": [
    "yeoman-generator",
    "static-site",
    "nunjucks",
    "gulp",
    "template"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Skerwe/generator-njk-site/issues"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "yeoman-generator": "^5.3.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "prettier": "^2.3.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-environment": "^3.4.1",
    "yeoman-test": "^6.2.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/generators/app/templates/*"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --coverage"
  }
}
