{
  "name": "generator-njk-site",
  "version": "2.2.0",
  "description": "A nunjucks and gulp static site generator",
  "homepage": "https://github.com/Skerwe/generator-njk-site#readme",
  "author": {
    "name": "Quintin Henn",
    "email": "quintin.henn@gmail.com",
    "url": "https://skerwe.surge.sh/"
  },
  "type": "module",
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skerwe/generator-njk-site.git"
  },
  "keywords": [
    "yeoman-generator",
    "static-site",
    "nunjucks",
    "gulp",
    "template"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Skerwe/generator-njk-site/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "yeoman-generator": "^7.1.1",
    "yosay": "^3.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^13.1.2",
    "lodash": "^4.17.21",
    "prettier": "^2.8.4",
    "yeoman-assert": "^3.1.1",
    "yeoman-environment": "^4.3.0",
    "yeoman-test": "^8.2.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/generators/app/templates/*"
    ],
    "transform": {}
  },
  "lint-staged": {
    "*.js": [
      "eslint __tests__ generators/app/index.js --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint __tests__ generators/app/index.js",
    "lint:fix": "eslint __tests__ generators/app/index.js --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  }
}
